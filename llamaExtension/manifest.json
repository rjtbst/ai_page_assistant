{
  "manifest_version": 3,
  "name": "LLaMA3 Query Extension",
  "version": "1.0",
  "description": "Send tab content or prompt to local LLaMA3 server",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://127.0.0.1:8000/*"
  ]
}
